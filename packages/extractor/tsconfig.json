{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "strict": false,
    "exactOptionalPropertyTypes": false,
    "skipLibCheck": true,
    "types": [
      "node",
      "better-sqlite3"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}
