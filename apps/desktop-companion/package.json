    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@cursor-mobile-chat/shared": "workspace:*",
    "@cursor-mobile-chat/extractor": "workspace:*",
    "commander": "^12.0.0",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
