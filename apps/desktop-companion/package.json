{
  "name": "@cursor-mobile-chat/desktop-companion",
  "version": "0.1.0",
  "private": true,
  "description": "Desktop CLI companion that watches Cursor databases and syncs with server",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cursor-companion": "dist/cli.js"
